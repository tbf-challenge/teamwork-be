{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base", "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": 0,
        "max-len": ["error", { "code": 80 }],
        "semi": ["error", "never"],
        "indent": ["error", "tab"],
        "comma-dangle": ["error", {
            "arrays": "never",
            "objects": "never",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }],
        "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 0 }]
    }
}
